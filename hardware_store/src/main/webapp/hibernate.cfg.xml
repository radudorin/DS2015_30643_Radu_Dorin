<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>

        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>

        <mapping class="com.springapp.hardware_store.model.Member"/>
        <mapping class="com.springapp.hardware_store.model.MemberRole"/>
        <mapping class="com.springapp.hardware_store.model.OrderItem"/>
        <mapping class="com.springapp.hardware_store.model.OrderStatus"/>
        <mapping class="com.springapp.hardware_store.model.PriceItem"/>
        <mapping class="com.springapp.hardware_store.model.CartItem"/>
        <mapping class="com.springapp.hardware_store.model.Product"/>
        <mapping class="com.springapp.hardware_store.model.ProductCategory"/>
        <mapping class="com.springapp.hardware_store.model.Rating"/>
        <mapping class="com.springapp.hardware_store.model.ShoppingCart"/>
        <mapping class="com.springapp.hardware_store.model.Order"/>
        <mapping class="com.springapp.hardware_store.model.Subscription"/>

    </session-factory>
</hibernate-configuration>